{
    "category": "Comments", 
    "console": "http://open.weibo.com/tools/console?uri=comments/to_me&httpmethod=GET&", 
    "description": "我收到的评论列表", 
    "parameters": [
        {
            "optional": true, 
            "type": "int64", 
            "name": "since_id", 
            "description": "若指定此参数，则返回ID比since_id大的评论（即比since_id时间晚的评论），默认为0。"
        }, 
        {
            "optional": true, 
            "type": "int64", 
            "name": "max_id", 
            "description": "若指定此参数，则返回ID小于或等于max_id的评论，默认为0。"
        }, 
        {
            "optional": true, 
            "type": "int", 
            "name": "count", 
            "description": "单页返回的记录条数，默认为50。"
        }, 
        {
            "optional": true, 
            "type": "int", 
            "name": "page", 
            "description": "返回结果的页码，默认为1。"
        }, 
        {
            "optional": true, 
            "type": "int", 
            "name": "filter_by_author", 
            "description": "作者筛选类型，0：全部、1：我关注的人、2：陌生人，默认为0。"
        }, 
        {
            "optional": true, 
            "type": "int", 
            "name": "filter_by_source", 
            "description": "来源筛选类型，0：全部、1：来自微博的评论、2：来自微群的评论，默认为0。"
        }
    ], 
    "url": "https://api.weibo.com/2/comments/to_me.json", 
    "response": [
        {
            "type": "string", 
            "name": "created_at", 
            "description": "评论创建时间"
        }, 
        {
            "type": "int64", 
            "name": "id", 
            "description": "评论的ID"
        }, 
        {
            "type": "string", 
            "name": "text", 
            "description": "评论的内容"
        }, 
        {
            "type": "string", 
            "name": "source", 
            "description": "评论的来源"
        }, 
        {
            "type": "object", 
            "name": "user", 
            "description": "评论作者的用户信息字段 详细"
        }, 
        {
            "type": "string", 
            "name": "mid", 
            "description": "评论的MID"
        }, 
        {
            "type": "string", 
            "name": "idstr", 
            "description": "字符串型的评论ID"
        }, 
        {
            "type": "object", 
            "name": "status", 
            "description": "评论的微博信息字段 详细"
        }, 
        {
            "type": "object", 
            "name": "reply_comment", 
            "description": "评论来源评论，当本评论属于对另一评论的回复时返回此字段"
        }
    ], 
    "signature": "ToMe", 
    "path": "/2/comments/to_me.json", 
    "method": "GET"
}