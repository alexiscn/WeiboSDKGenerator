        }, 
        {
            "type": "object", 
            "name": "pic_ids", 
            "description": "微博配图ID。多图时返回多图ID，用来拼接图片url。用返回字段thumbnail_pic的地址配上该返回字段的图片ID，即可得到多个图片url。"
        }, 
        {
            "type": "object array", 
            "name": "ad", 
            "description": "微博流内的推广微博ID"
        }
    ], 
    "signature": "Statuses_share", 
    "path": "/2/statuses/share.json", 
    "method": "GET"
}